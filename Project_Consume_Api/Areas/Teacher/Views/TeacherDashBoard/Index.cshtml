
 @model Project_Consume_Api.Areas.Teacher.Models.TeacherDashBoardModel

@{
    ViewData["Title"] = "Teacher Dashboard";
}


<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<!-- Bootstrap 5 CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Custom CSS -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    h2, h3 {
        font-weight: 600;
        color: #333;
        margin-bottom: 20px;
    }

    .card {
        border: none;
        border-radius: 20px; /* Makes corners more rounded */
        transition: transform 0.3s ease-in-out;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden; /* Ensures child elements respect rounded corners */
    }

    .card-body {
        padding: 20px;
        background-color: #F6648C;
        border-radius: 20px; /* Ensures inner content respects the rounded corners */
    }


        .card:hover {
            transform: translateY(-5px);
        }

    

    .table {
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
    }

        .table thead {
            background-color: #343a40;
            color: #ffffff;
        }

        .table tbody tr {
            transition: background-color 0.2s ease-in-out;
        }

            .table tbody tr:hover {
                background-color: #f1f1f1;
            }

    .table-bordered th,
    .table-bordered td {
        border: 1px solid #dee2e6;
    }

    hr {
        border: 1px solid #ddd;
        margin: 30px 0;
    }
</style>

<h2 class="text-center">Teacher Dashboard</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="container mt-4">
    <div class="row">
        @foreach (var count in Model.Counts)
        {
            <div class="col-md-3 text-white">
                <div class="card text-white mb-3">
                    <div class="card-body text-center text-white">
                        <h5 class="card-title">@count.Metric</h5>
                        <h2 class="text-white">@count.Value</h2>
                    </div>
                </div>
            </div>
        }
    </div>

    <hr />

    <h3 class="text-center">Recent Students</h3>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                
                <th>Name</th>
                <th>Roll No</th>
                <th>Email</th>
                <th>Class Name</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.RecentStudents)
            {
                <tr>
                    
                    <td>@student.StudentName</td>
                    <td>@student.RollNo</td>
                    <td>@student.EmailID</td>
                    <td>@student.ClassName</td>
                </tr>
            }
        </tbody>
    </table>

    <hr />

    <h3 class="text-center">Recent Teachers</h3>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model.RecentTeachers)
            {
                <tr>
                    <td>@teacher.TeacherName</td>
                    <td>@teacher.EmailID</td>
                </tr>
            }
        </tbody>
    </table>

    <hr />

    <h3 class="text-center">Top Attendance Records</h3>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>No</th>
                <th>Teacher Name</th>
                <th>Student Name</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @{
                int c = 1; // Initialize counter
            }
            @foreach (var attendance in Model.TopAttendances)
            {
                <tr>
                    <td>@c</td> <!-- Display row number -->
                    <td>@attendance.TeacherName</td>
                    <td>@attendance.StudentName</td>
                    <td>@attendance.Date</td>
                    <td>@attendance.Status</td>
                </tr>
                c++; // Increment counter
            }
        </tbody>
    </table>


    <hr />

    <h3 class="text-center">Top Grades</h3>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>No</th>
                <th>Student Name</th>
                <th>Subject Name</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @{
                int co = 1; // Initialize counter
            }
            @foreach (var grade in Model.TopGrades)
            {
                <tr>
                    <td>@co</td> <!-- Display row number -->
                    <td>@grade.StudentName</td>
                    <td>@grade.SubjectName</td>
                    <td>@grade.Score</td>
                </tr>
                co++; // Increment counter
            }
        </tbody>
    </table>

</div>
