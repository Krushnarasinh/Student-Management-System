@model List<Project_Consume_Api.Areas.Student.Models.StudentModel>

@{
    ViewData["Title"] = "Student List";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary fw-bold mb-0">Student List</h1>
    <div class="ms-auto"> <!-- Pushes the button to the right -->
        <a asp-area="Teacher" asp-controller="Teacher" asp-action="StudentForm" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Add Student
        </a>
    </div>
</div>




<div class="mb-3">
    <div class="input-group shadow-sm" style="border-radius: 10px; overflow: hidden;">
        <span class="input-group-text bg-primary text-white" style="border-top-left-radius: 10px; border-bottom-left-radius: 10px;">
            <i class="bi bi-search"></i>
        </span>
        <input type="text" class="form-control form-control-lg bg-white" id="savingSearch"
               placeholder="Search Students" style="border-top-right-radius: 10px; border-bottom-right-radius: 10px;">
    </div>
</div>



<div class="card shadow">
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover table-responsive">
            <thead class="table- text-center">
                <tr>
                    <th>Student Name</th>
                    <th>DOB</th>
                    <th>Gender</th>
                    <th>Contact Info</th>
                    <th>Roll No</th>
                    <th>Email ID</th>
                    <th>Class ID</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody id="savingTable">
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.StudentName</td>
                        <td>@student.DOB.ToString("yyyy-MM-dd")</td>
                        <td>@student.Gender</td>
                        <td>@student.ContactInfo</td>
                        <td>@student.RollNo</td>
                        <td>@student.EmailID</td>
                        <td>@student.ClassID</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-success" asp-controller="Teacher" asp-action="StudentForm" asp-route-StudentID="@student.StudentID">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-outline-danger" asp-controller="Teacher" asp-action="StudentDelete" asp-route-StudentID="@student.StudentID"
                               onclick="return confirm('Are you sure you want to delete this student?');">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Display SweetAlert for successful deletion
        @if (TempData["StudentDeleted"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Success!',
                        text: '@TempData["StudentDeleted"]',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    });
            </text>
        }

                // Display SweetAlert for deletion failure (e.g., foreign key constraint)
        @if (TempData["StudentNotDeleted"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: '@TempData["StudentNotDeleted"]',
                        confirmButtonText: 'OK'
                    });
            </text>
        }

                // Display SweetAlert for successful insertion
        @if (TempData["StudentInsert"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Success!',
                        text: '@TempData["StudentInsert"]',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    });
            </text>
        }

                // Display SweetAlert for successful update
        @if (TempData["StudentUpdated"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Success!',
                        text: '@TempData["StudentUpdated"]',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    });
            </text>
        }
                                });
    </script>
    <!-- Include jQuery if not already included -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            // Search functionality for filtering table rows
            $("#savingSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase().trim(); // Get search input
                $("#savingTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1); // Toggle rows based on match
                });
            });
        });
    </script>
}
