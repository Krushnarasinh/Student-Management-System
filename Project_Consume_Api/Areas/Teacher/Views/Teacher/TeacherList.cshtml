@model IEnumerable<TeacherModel>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary fw-bold mb-0">Teacher List</h1>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a asp-controller="Teacher" asp-action="TeacherForm" class="btn btn-primary me-2">
            <i class="bi bi-plus-lg me-1"></i> Add Teacher
        </a>
    </div>
</div>



<table class="table table-responsive">
    <tr>
        <th>TeacherName</th>
        <th>ContactInfo</th>
        <th>EmailID</th>
        <th>Password</th>
        <th>ClassID</th>
        <th>Actions</th>
    </tr>

    @foreach (var teacher in Model)
    {
        <tr>
            <td>@teacher.TeacherName</td>
            <td>@teacher.ContactInfo</td>
            <td>@teacher.EmailID</td>
            <td>@teacher.Password</td>
            <td>@teacher.ClassID</td>
            <td class="text-center">
                <a class="btn btn-outline-success btn-xs" asp-controller="Teacher" asp-action="TeacherForm" asp-route-TeacherID="@teacher.TeacherID">
                    <i class="bi bi-pencil-fill">Edit</i>
                </a>
                <a class="btn btn-outline-danger btn-xs" asp-controller="Teacher" asp-action="Delete" asp-route-TeacherID="@teacher.TeacherID" onclick="return confirm('Are you sure you want to delete this Country?');">
                    <i class="bi bi-trash-fill">Delete</i>
                </a>
            </td>
        </tr>
    }
</table>
