@model GradeModel

<section class="section">
    <div class="row">
        <div class="col-lg">
            <div class="card m-5">
                <div class="card-body pt-6">
                    <div class="row my-3">

                        <div class="col">
                            <form>
                                <input type="button" value="Go back!" onclick="history.back()">
                            </form>
                        </div>
                        <div class="col-10 text-center fs-6 fw-bold">Add/Edit Grade</div>
                    </div>
                    <form method="post" asp-action="Save" asp-controller="Grade">
                        <input type="hidden" asp-for="GradeID" />

                        <div class="row mb-3 mt-3">
                            <label for="Score" class="col-sm-2 col-form-label">Score</label>
                            <div class="col-sm-10">
                                <input asp-for="Score" type="text" class="form-control" id="Score" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="TeacherID" class="col-sm-2 col-form-label">Teacher ID</label>
                            <div class="col-sm-10">
                                <select asp-for="TeacherID" class="form-select" id="TeacherID" asp-items="@(new SelectList(ViewBag.TeacherList, "TeacherID", "TeacherName"))">
                                    <option value="">Select Teacher</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="StudentID" class="col-sm-2 col-form-label">Student ID</label>
                            <div class="col-sm-10">
                                <select asp-for="StudentID" class="form-select" id="StudentID" asp-items="@(new SelectList(ViewBag.StudentList, "StudentID", "StudentName"))">
                                    <option value="">Select Student</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="SubjectID" class="col-sm-2 col-form-label">Subject ID</label>
                            <div class="col-sm-10">
                                <select asp-for="SubjectID" class="form-select" id="SubjectID" asp-items="@(new SelectList(ViewBag.SubjectList, "SubjectID", "SubjectName"))">
                                    <option value="">Select Subject</option>
                                </select>
                            </div>
                        </div>


                        <div class="row mb-3 text-center">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Submit Form</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
