@using Project_Consume_Api.Areas.Teacher.Models
@model IEnumerable<GradeModel>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary fw-bold mb-0">Grade List</h1>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a asp-controller="Grade" asp-action="GradeForm" class="btn btn-primary me-2">
            <i class="bi bi-plus-lg me-1"></i> Add Grade
        </a>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Grade ID</th>
            <th>Student ID</th>
            <th>Subject ID</th>
            <th>Score</th>
            <th>Teacher ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        
        
            @foreach (var grade in Model)
            {
                <tr>
                    <td>@grade.GradeID</td>
                    <td>@grade.StudentID</td>
                    <td>@grade.SubjectID</td>
                    <td>@grade.Score</td>
                    <td>@grade.TeacherID</td>
                    <td class="text-center">
                        <a class="btn btn-outline-success btn-xs" asp-controller="Grade" asp-action="GradeForm" asp-route-GradeID="@grade.GradeID">
                            <i class="bi bi-pencil-fill">Edit</i>
                        </a>
                        <a class="btn btn-outline-danger btn-xs" asp-controller="Grade" asp-action="Delete" asp-route-GradeID="@grade.GradeID" onclick="return confirm('Are you sure you want to delete this grade?');">
                            <i class="bi bi-trash-fill">Delete</i>
                        </a>
                    </td>
                </tr>
            }
        
    </tbody>
</table>
