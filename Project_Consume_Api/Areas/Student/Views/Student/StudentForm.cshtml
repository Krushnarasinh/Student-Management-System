@using Project_Consume_Api.Areas.Student.Models
@model StudentModel
<style>
    

    section {
        display: flex;
        justify-content: center;
    }

    .container-fluid {
        width: 100%;
        padding: 20px;
    }

    .card {
        width: 100%;
        max-width: 600px; /* Adjust max-width for better responsiveness */
        margin: auto;
        background: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .form-group {
        width: 100%;
    }

    /* Adjust button size */
    .btn-sm {
        padding: 8px 16px;
        font-size: 14px;
    }
</style>

<section>
    <div class="container-fluid">
        <h1 class="text-primary fw-bold text-center">Student Registration</h1>
        <div class="card shadow-lg p-4">
            <div class="card-body">
                <form method="post" asp-action="Save">
                    <input type="hidden" asp-for="StudentID" />

                    <div class="mb-3 form-group">
                        <label asp-for="StudentName"></label>
                        <input asp-for="StudentName" class="form-control" />
                        <span asp-validation-for="StudentName" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="DOB"></label>
                        <input asp-for="DOB" type="date" class="form-control" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="Gender"></label>
                        <select asp-for="Gender" class="form-select">
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="ContactInfo"></label>
                        <input asp-for="ContactInfo" type="tel" class="form-control" />
                        <span asp-validation-for="ContactInfo" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="RollNo"></label>
                        <input asp-for="RollNo" class="form-control" />
                        <span asp-validation-for="RollNo" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="EmailID"></label>
                        <input asp-for="EmailID" type="email" class="form-control" />
                        <span asp-validation-for="EmailID" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="ClassID"></label>
                        <select asp-for="ClassID" class="form-select" asp-items="@(new SelectList(ViewBag.ClassList, "ClassID", "ClassName"))">
                            <option value="">Select Class</option>
                        </select>
                        <span asp-validation-for="ClassID" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success btn-sm">Submit</button>
                        <a asp-action="Index" class="btn btn-dark btn-sm">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
