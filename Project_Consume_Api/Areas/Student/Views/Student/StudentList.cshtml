@using Project_Consume_Api.Areas.Student.Models
@model IEnumerable<StudentModel>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary fw-bold mb-0">Student List</h1>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a asp-controller="Student" asp-action="StudentForm" class="btn btn-primary me-2">
            <i class="bi bi-plus-lg me-1"></i> Add Student
        </a>
    </div>
</div>

<table class="table table-responsive">
    <tr>
        <th>Student Name</th>
        <th>DOB</th>
        <th>Gender</th>
        <th>Contact Info</th>
        <th>Roll No</th>
        <th>Email ID</th>
        <th>Class ID</th>
        <th>Actions</th>
    </tr>

    @foreach (var student in Model)
    {
        <tr>
            <td>@student.StudentName</td>
            <td>@student.DOB.ToString("yyyy-MM-dd")</td>
            <td>@student.Gender</td>
            <td>@student.ContactInfo</td>
            <td>@student.RollNo</td>
            <td>@student.EmailID</td>
            <td>@student.ClassID</td>
            <td class="text-center">
                <a class="btn btn-outline-success btn-xs" asp-controller="Student" asp-action="StudentForm" asp-route-StudentID="@student.StudentID">
                    <i class="bi bi-pencil-fill">Edit</i>
                </a>
                <a class="btn btn-outline-danger btn-xs" asp-controller="Student" asp-action="Delete" asp-route-StudentID="@student.StudentID" onclick="return confirm('Are you sure you want to delete this student?');">
                    <i class="bi bi-trash-fill">Delete</i>
                </a>
            </td>
        </tr>
    }
</table>